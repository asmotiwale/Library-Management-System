<p id="notice"><%= notice %></p>

<h1>Manage Admins</h1>

<table>
  <thead>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td><%= user.password %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td>
        <% if user.role !=2 %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Admin', new_user_path %> |
<%= link_to 'Manage Rooms', manage_rooms_url %> |
<%= link_to 'Manage Library Members', manage_members_users_url %>