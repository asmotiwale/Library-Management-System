<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="field">
    <% if current_user && ( current_user.role == 2 || current_user.role== 0 ) %>
      <%= f.label :role %>
      <%= f.select :role, options_for_select([["Administrator" , "0" ]])%>
    <% else %>
        <%= f.label :role %>
        <%= f.select :role, options_for_select([["Member" , "2" ]])%>
    <%end%>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
