<p id="notice"><%= notice %></p>

<h2 align="center">Manage Library Members</h2>

<h3>Member List:</h3>
<table>
  <thead>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show Details', user %></td>
        <td><%= link_to 'View Reservation History', view_history_booking_url(user.id) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<h3>
  <%= link_to 'Create New Library Member', new_user_path %> |
  <%= link_to 'Manage Admins', manage_admins_users_url %> |
  <%= link_to 'Manage Rooms', manage_rooms_url %> |
</h3>