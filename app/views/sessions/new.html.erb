<%= form_tag sessions_path do %>
    <h3>Login</h3>

    <div class="field">
        <%= label_tag :email, 'Email' %>
        <%= email_field_tag :email, params[:email] %>
      </div>
    <div class="field">
        <%= label_tag :password,'Password'%>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div class="actions">
        <%=submit_tag "Log In"%>
      </div>

    <h3>New User? <%= link_to "Sign Up", signup_path %></h3>

    </div>
<% end %>