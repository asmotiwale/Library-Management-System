<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
  <tr>
    <th>Room</th>
    <th>Booking start time</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.room.number %></td>
        <td><%= booking.booking_start_time %></td>

        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>


